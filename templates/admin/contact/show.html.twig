{% extends contact_us_config.templates.base|default('@ContactUs/base.html.twig') %}

{% block title %}Contact Message #{{ message.id }}{% endblock %}

{% block contact_body %}
<div class="contact-admin-container">
    <div class="contact-admin-card">
        <div class="contact-admin-header">
            <h1>Message #{{ message.id }}</h1>
            <p>Submitted {{ message.createdAt ? message.createdAt|date('Y-m-d H:i') : '' }}</p>
        </div>

        <dl class="contact-admin-details">
            <dt>Name</dt>
            <dd>{{ message.get('name') }}</dd>

            <dt>Email</dt>
            <dd>{{ message.get('email') }}</dd>

            <dt>Subject</dt>
            <dd>{{ message.get('subject') }}</dd>

            <dt>Message</dt>
            <dd><pre class="contact-admin-message">{{ message.get('message') }}</pre></dd>

            <dt>IP address</dt>
            <dd>{{ message.ipAddress }}</dd>

            <dt>User agent</dt>
            <dd>{{ message.userAgent }}</dd>
        </dl>

        <div class="contact-admin-actions">
            <a class="contact-button contact-button--ghost" href="{{ path('contact_us_admin_index') }}">Back</a>
            <form class="contact-inline-form" method="post" action="{{ path('contact_us_admin_delete', { id: message.id }) }}" onsubmit="return confirm('Delete this message?');">
                <button class="contact-button contact-button--danger" type="submit">Delete</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
