{% extends contact_us_config.templates.base|default('@ContactUs/base.html.twig') %}

{% block title %}Contact Message #{{ message.id }}{% endblock %}

{% block contact_body %}
<div class="contact-admin-container">
    <div class="contact-admin-card">
        <div class="contact-admin-header">
            <h1>Message #{{ message.id }}</h1>
            <p>Submitted {{ message.createdAt ? message.createdAt|date('Y-m-d H:i') : '' }}</p>
        </div>

        <dl class="contact-admin-details">
            <dt>Name</dt>
            <dd>{{ message.get('name') }}</dd>

            <dt>Email</dt>
            <dd>{{ message.get('email') }}</dd>

            <dt>Subject</dt>
            <dd>{{ message.get('subject') }}</dd>

            <dt>Message</dt>
            <dd><pre class="contact-admin-message">{{ message.get('message') }}</pre></dd>

            <dt>IP address</dt>
            <dd>{{ message.ipAddress }}</dd>

            <dt>User agent</dt>
            <dd>{{ message.userAgent }}</dd>
            
            {% if message.verified is defined and message.verified is not null %}
            <dt>{{ 'contact.verification.status'|trans({}, 'contact_us') }}</dt>
            <dd>
                {% if message.verified %}
                    <span class="contact-badge contact-badge--success">{{ 'contact.verification.status_verified'|trans({}, 'contact_us') }}</span>
                    {% if message.verifiedAt is defined and message.verifiedAt %}
                        <span class="contact-verified-at">({{ message.verifiedAt|date('Y-m-d H:i') }})</span>
                    {% endif %}
                {% else %}
                    <span class="contact-badge contact-badge--warning">{{ 'contact.verification.status_pending'|trans({}, 'contact_us') }}</span>
                {% endif %}
            </dd>
            {% endif %}
        </dl>

        <div class="contact-admin-actions">
            <a class="contact-button contact-button--ghost" href="{{ path('contact_us_admin_index') }}">Back</a>
            <form class="contact-inline-form" method="post" action="{{ path('contact_us_admin_delete', { id: message.id }) }}" onsubmit="return confirm('Delete this message?');">
                <button class="contact-button contact-button--danger" type="submit">Delete</button>
            </form>
        </div>
    </div>
</div>

<style>
.contact-badge {
    display: inline-block;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
}
.contact-badge--success {
    background-color: #d1fae5;
    color: #065f46;
}
.contact-badge--warning {
    background-color: #fef3c7;
    color: #92400e;
}
.contact-verified-at {
    margin-left: 8px;
    color: #6b7280;
    font-size: 14px;
}
</style>
{% endblock %}
