{#
    Email verification template (HTML)
    Variables from ContactMailer:
    - message: ContactMessage object
    - data: array of form data
    - subject: email subject
    - verificationUrl: full URL for verification
    - token: verification token
    - labels: pre-translated labels array
#}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ labels.verification_title }}</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { background: #007bff; color: white; padding: 20px; text-align: center; border-radius: 5px 5px 0 0; }
        .content { background: #f9f9f9; padding: 20px; border: 1px solid #ddd; }
        .message-box { background: white; padding: 15px; border-left: 4px solid #007bff; margin: 15px 0; }
        .label { font-weight: bold; color: #666; }
        .verify-button { display: inline-block; background: #28a745; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; margin: 20px 0; }
        .verify-button:hover { background: #218838; }
        .warning { background: #fff3cd; border: 1px solid #ffc107; padding: 15px; border-radius: 5px; margin: 15px 0; }
        .warning-title { color: #856404; font-weight: bold; margin-bottom: 5px; }
        .footer { text-align: center; padding: 15px; color: #666; font-size: 12px; }
        .link-fallback { font-size: 12px; color: #666; word-break: break-all; }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ labels.verification_title }}</h1>
    </div>
    
    <div class="content">
        <p>{{ labels.verification_intro }}</p>
        
        <h3>{{ labels.verification_your_message }}</h3>
        <div class="message-box">
            {% if data.name is defined and data.name %}
            <p><span class="label">{{ labels.label_name }}:</span> {{ data.name }}</p>
            {% endif %}
            
            {% if data.email is defined and data.email %}
            <p><span class="label">{{ labels.label_email }}:</span> {{ data.email }}</p>
            {% endif %}
            
            {% if data.phone is defined and data.phone %}
            <p><span class="label">{{ labels.label_phone }}:</span> {{ data.phone }}</p>
            {% endif %}
            
            {% if data.subject is defined and data.subject %}
            <p><span class="label">{{ labels.label_subject }}:</span> {{ data.subject }}</p>
            {% endif %}
            
            {% if data.message is defined and data.message %}
            <p><span class="label">{{ labels.label_message }}:</span></p>
            <p>{{ data.message|nl2br }}</p>
            {% endif %}
        </div>
        
        <div class="warning">
            <div class="warning-title">⚠️ {{ labels.verification_warning_title }}</div>
            <p>{{ labels.verification_warning_text }}</p>
        </div>
        
        <p style="text-align: center;">
            <a href="{{ verificationUrl }}" class="verify-button">✓ {{ labels.verification_button }}</a>
        </p>
        
        <p class="link-fallback">
            {{ labels.verification_link_fallback }}<br>
            <a href="{{ verificationUrl }}">{{ verificationUrl }}</a>
        </p>
    </div>
    
    <div class="footer">
        <p>{{ labels.verification_footer }}</p>
        <p><em>{{ labels.verification_not_you }}</em></p>
    </div>
</body>
</html>
