<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'contact.verification.email_subject'|trans({}, 'contact_us') }}</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 8px 8px 0 0;
            text-align: center;
        }
        .content {
            background: #f9fafb;
            padding: 30px;
            border: 1px solid #e5e7eb;
            border-top: none;
        }
        .message-preview {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
        }
        .message-preview h3 {
            margin-top: 0;
            color: #374151;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        .message-preview .field {
            margin-bottom: 15px;
        }
        .message-preview .label {
            font-weight: 600;
            color: #6b7280;
            font-size: 12px;
            text-transform: uppercase;
            margin-bottom: 4px;
        }
        .message-preview .value {
            color: #111827;
        }
        .verify-button {
            display: inline-block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white !important;
            text-decoration: none;
            padding: 14px 32px;
            border-radius: 8px;
            font-weight: 600;
            margin: 20px 0;
        }
        .verify-button:hover {
            opacity: 0.9;
        }
        .footer {
            background: #f3f4f6;
            padding: 20px 30px;
            border: 1px solid #e5e7eb;
            border-top: none;
            border-radius: 0 0 8px 8px;
            font-size: 12px;
            color: #6b7280;
        }
        .warning {
            background: #fef3c7;
            border: 1px solid #f59e0b;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
            color: #92400e;
        }
        .link-fallback {
            word-break: break-all;
            font-size: 12px;
            color: #6b7280;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ 'contact.verification.email_title'|trans({}, 'contact_us') }}</h1>
    </div>
    
    <div class="content">
        <p>{{ 'contact.verification.email_intro'|trans({}, 'contact_us') }}</p>
        
        <div class="message-preview">
            <h3>{{ 'contact.verification.your_message'|trans({}, 'contact_us') }}</h3>
            
            <div class="field">
                <div class="label">{{ 'contact.form.name'|trans({}, 'contact_us') }}</div>
                <div class="value">{{ message.get('name') }}</div>
            </div>
            
            <div class="field">
                <div class="label">{{ 'contact.form.email'|trans({}, 'contact_us') }}</div>
                <div class="value">{{ message.get('email') }}</div>
            </div>
            
            {% if message.get('phone') %}
            <div class="field">
                <div class="label">{{ 'contact.form.phone'|trans({}, 'contact_us') }}</div>
                <div class="value">{{ message.get('phone') }}</div>
            </div>
            {% endif %}
            
            {% if message.get('subject') %}
            <div class="field">
                <div class="label">{{ 'contact.form.subject'|trans({}, 'contact_us') }}</div>
                <div class="value">{{ message.get('subject') }}</div>
            </div>
            {% endif %}
            
            <div class="field">
                <div class="label">{{ 'contact.form.message'|trans({}, 'contact_us') }}</div>
                <div class="value">{{ message.get('message')|nl2br }}</div>
            </div>
        </div>
        
        <div class="warning">
            <strong>{{ 'contact.verification.warning_title'|trans({}, 'contact_us') }}</strong><br>
            {{ 'contact.verification.warning_text'|trans({}, 'contact_us') }}
        </div>
        
        <div style="text-align: center;">
            <a href="{{ verificationUrl }}" class="verify-button">
                {{ 'contact.verification.verify_button'|trans({}, 'contact_us') }}
            </a>
            <div class="link-fallback">
                {{ 'contact.verification.link_fallback'|trans({}, 'contact_us') }}<br>
                <a href="{{ verificationUrl }}">{{ verificationUrl }}</a>
            </div>
        </div>
    </div>
    
    <div class="footer">
        <p>{{ 'contact.verification.footer_text'|trans({}, 'contact_us') }}</p>
        <p>{{ 'contact.verification.not_you'|trans({}, 'contact_us') }}</p>
    </div>
</body>
</html>
