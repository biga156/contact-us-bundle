{% block subject %}{{ subject }}{% endblock %}

{% block body_html %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .header h1 {
            margin: 0;
            font-size: 24px;
            color: #212529;
        }
        .field {
            margin-bottom: 15px;
        }
        .field-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 5px;
        }
        .field-value {
            color: #212529;
        }
        .message-box {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 4px;
            border-left: 4px solid #0d6efd;
            white-space: pre-wrap;
        }
        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>ðŸ“¬ New Contact Form Submission</h1>
    </div>

    {% if data.name is defined %}
    <div class="field">
        <div class="field-label">Name:</div>
        <div class="field-value">{{ data.name }}</div>
    </div>
    {% endif %}

    {% if data.email is defined %}
    <div class="field">
        <div class="field-label">Email:</div>
        <div class="field-value"><a href="mailto:{{ data.email }}">{{ data.email }}</a></div>
    </div>
    {% endif %}

    {% if data.phone is defined %}
    <div class="field">
        <div class="field-label">Phone:</div>
        <div class="field-value"><a href="tel:{{ data.phone }}">{{ data.phone }}</a></div>
    </div>
    {% endif %}

    {% if data.subject is defined %}
    <div class="field">
        <div class="field-label">Subject:</div>
        <div class="field-value">{{ data.subject }}</div>
    </div>
    {% endif %}

    {% if data.message is defined %}
    <div class="field">
        <div class="field-label">Message:</div>
        <div class="message-box">{{ data.message }}</div>
    </div>
    {% endif %}

    {% set customFields = [] %}
    {% for key, value in data %}
        {% if key not in ['name', 'email', 'phone', 'subject', 'message'] %}
            {% set customFields = customFields|merge([{key: key, value: value}]) %}
        {% endif %}
    {% endfor %}

    {% if customFields|length > 0 %}
    <div class="field">
        <div class="field-label">Additional Information:</div>
        {% for field in customFields %}
        <div style="margin-left: 10px; margin-top: 5px;">
            <strong>{{ field.key|title }}:</strong> {{ field.value }}
        </div>
        {% endfor %}
    </div>
    {% endif %}

    <div class="footer">
        <strong>Submitted:</strong> {{ message.createdAt|date('Y-m-d H:i:s') }}<br>
        <strong>IP Address:</strong> {{ message.ipAddress ?? 'Unknown' }}
    </div>
</body>
</html>
{% endblock %}
